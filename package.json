{
  "name": "recurse-roulette-desktop-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",    
    "build:darwin": "npx electron-packager . 'Recurse Roulette' --platform=darwin --out=dist/ --icon=./icon.icns --overwrite",
    "build:win32": "npx electron-packager . 'Recurse Roulette' --platform=win32 --out=dist/ --icon=./icon.ico --overwrite",
    "build:linux": "npx electron-packager . 'Recurse Roulette' --platform=linux --out=dist/ --icon=./icon.png --overwrite",
    "build": "npm run build:darwin && npm run build:win32 && npm run build:linux"
  },  
  "license": "ISC",
  "devDependencies": {
    "electron": "^8.2.5",
    "electron-packager": "^14.2.1"
  }
}
